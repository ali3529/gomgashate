<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="progress"
            type="Boolean" />
        <variable
            name="details"
            type="com.utabpars.gomgashteh.model.DetailModel.Data" />
    </data>



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentAnnouncmentDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="right"
        app:sliderAutoCycleEnabled="true"
        android:background="@color/white"

        app:sliderIndicatorAnimationDuration="600"

        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="6dp"
        app:sliderIndicatorRadius="2dp"


        app:sliderScrollTimeInSec="3"
        app:sliderStartAutoCycle="true"

        />
    <RelativeLayout
        android:id="@+id/laoyut_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider"
        android:gravity="right"
        android:padding="8dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="پژو 206 مدل 94"
            android:text="@{details.title}"
            android:textSize="@dimen/detail_size"
            android:fontFamily="@font/sans"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="شیراز گویم"
            android:text="@{details.city}"
            android:textSize="@dimen/detail_size"
            android:fontFamily="@font/sans"
            android:textColor="@color/lowblack"
            android:layout_below="@+id/title"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="12dp"
        android:background="@color/blackgray"
        android:layout_below="@id/laoyut_title"/>
    <RelativeLayout
        android:id="@+id/layout_catrgory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:gravity="right"
        android:padding="14dp"
        android:layout_marginTop="8dp"
        >
        <TextView
          android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دسته بندی"
            android:textSize="@dimen/detail_size"
            android:fontFamily="@font/sans"
            android:textColor="@color/lowblack"

            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="کالا"
            android:text="@{details.collection}"
            android:textSize="@dimen/detail_size"
            android:fontFamily="@font/sans"
            android:textColor="@color/black"

            android:layout_marginTop="6dp"
            android:layout_alignParentLeft="true"/>
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="4dp"
            android:background="@color/blackgray"
            android:layout_below="@id/category"
            android:layout_marginTop="8dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_catrgory"
        android:gravity="right"
        android:padding="14dp"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:id="@+id/collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="وضعیت"
            android:textSize="@dimen/detail_size"
            android:fontFamily="@font/sans"
            android:textColor="@color/lowblack"

            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="گم شده"
            android:text="@{details.type}"
            android:textSize="@dimen/detail_size"
            android:fontFamily="@font/sans"
            android:textColor="@color/black"

            android:layout_marginTop="6dp"
            android:layout_alignParentLeft="true"/>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="4dp"
            android:background="@color/blackgray"
            android:layout_below="@id/collection"
            android:layout_marginTop="8dp"/>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_collection"
        android:gravity="right"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="توضیحات"
            android:textSize="@dimen/detail_size"
            android:fontFamily="@font/sans"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem"

            android:textSize="@dimen/detail_size"
            android:fontFamily="@font/sans"
            android:textColor="@color/lowblack"
            android:layout_below="@id/detail"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"/>

    </RelativeLayout>


    </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:setImageSliderProgress="@{progress}"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="150dp"
            android:layout_height="125dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/progress"
            android:visibility="visible"
          />
    </RelativeLayout>
</RelativeLayout>
</layout>